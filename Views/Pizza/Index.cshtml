@model IEnumerable<PizzaOverviewViewModel>

@{
    ViewData["Title"] = "Pizza List";
}

<link rel="stylesheet" href="/css/pizzaIndex.css">

<h1>Pizza List</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Prijs</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pizza in Model)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Price</td>
                <td>
                    <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@pizza.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Pizza" asp-action="Create" class="btn btn-primary btn-sm">Create New Pizza</a>
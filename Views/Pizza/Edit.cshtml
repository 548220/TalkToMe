@{
    ViewData["Title"] = "Edit Pizza";
}
@model PizzaOverviewViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/PizzaEdit.css">
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1>Edit Pizza</h1>
            <form asp-action="Edit" asp-controller="Pizza" method="post">
                <input type="hidden" id="Id" name="Id" value="@Model.Id" />

                <div class="mb-3">
                    <label for="Name" class="form-label">Pizza Naam</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Voer de nieuwe naam van de pizza in" value="@Model.Name" required>
                </div>

                <div class="mb-3">
                    <label for="Price" class="form-label">Nieuwe Prijs (€)</label>
                    <input type="number" step="0.01" class="form-control" id="Price" name="Price" placeholder="Voer de nieuwe prijs in" value="@Model.Price" required>
                </div>

                <div class="mb-3">
                    <label for="Category" class="form-label">Categorie</label>
                    <input type="number" step="1" class="form-control" id="CategoryId" name="CategoryId" placeholder="Voer hier de nieuwe Categorie in" value="@Model.CategoryId" required>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-custom">Opslaan</button>
                    <a href="@Url.Action("Index", "Pizza")" class="btn btn-secondary">Annuleren</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
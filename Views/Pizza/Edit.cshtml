@{
    ViewData["Title"] = "Edit Pizza";
}

<h1>Edit Pizza</h1>

<form asp-action="Edit" method="post">
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" />
    </div>
    <div>
        <button type="submit">Save Changes</button>
        <a asp-action="Index">Cancel</a>
    </div>
</form>

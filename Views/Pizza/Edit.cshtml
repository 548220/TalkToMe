@{
    ViewData["Title"] = "Edit Pizza";
}
@model PizzaViewModel

<h1>Edit Pizza</h1>

@using (Html.BeginForm("Edit", "Pizza", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <br />
    <div class="form-group">
        <label for="Name">Naam</label>
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <br /> 
    <div class="form-group">
        <label for="Price">Prijs</label>
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>

    <br />
    <div class="form-group">
        <label for="Description">Beschrijving</label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    
    <br />
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a href="@Url.Action("Index", "Pizza")" class="btn btn-secondary">Annuleren</a>
}
